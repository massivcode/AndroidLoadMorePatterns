<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.massivcode.loadmorepatterns.MainActivity">

  <Button
    android:id="@+id/scrollUpToLoadMoreItemsBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Scroll up to load more items"
    android:textAllCaps="false" />

  <Button
    android:id="@+id/scrollUpAndSwipeDownToLoadMoreItemsButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Scroll up and Swipe down to load more items"
    android:textAllCaps="false" />

</LinearLayout>
